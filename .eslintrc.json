{
  "parser":"babel-eslint",
  "plugins": [
    "babel",
    "react"
  ],
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es6"    : true,
    "jest"   : true
  },
  "rules": {
    "react/jsx-uses-vars"  : 1,
    "react/jsx-uses-react" : 1,
    "comma-dangle": [2, "always-multiline"],
    "no-unused-vars": [
      2,
      {
        "args": "none"
      }
    ]
  }
}
